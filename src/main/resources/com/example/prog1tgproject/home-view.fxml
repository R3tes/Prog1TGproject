<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.prog1tgproject.Home">
   <children>
      <ToolBar fx:id="toolBar">
        <items>
            <MenuButton fx:id="opButton" mnemonicParsing="false" text="...">
            </MenuButton>
            <MenuButton mnemonicParsing="false" text="Egyéb műveletek">
              <items>
                <MenuItem fx:id="invertImageButton" mnemonicParsing="false" text="Kép invertálás" />
                <MenuItem fx:id="grayscaleImageButton" mnemonicParsing="false" text="Szürkeskála" />
              </items>
            </MenuButton>
            <MenuButton fx:id="addToAlbumButton" mnemonicParsing="false" text="+ Albumhoz hozzáadás">
              <items>
                <MenuItem fx:id="createNewAlbum" mnemonicParsing="false" text="Új album létrehozása" />
              </items>
            </MenuButton>
            <Button fx:id="slideShowButton" mnemonicParsing="false" text="Lejátszás" />
            <Button mnemonicParsing="false" text="Rajz" />
            <Button fx:id="zoomInButton" mnemonicParsing="false" />
            <Button fx:id="zoomOutButton" mnemonicParsing="false" />
        </items>
      </ToolBar>
      <HBox fx:id="root" alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0">
               <children>
                  <Button fx:id="prevImageButton" mnemonicParsing="false" />
               </children>
            </HBox>
          <StackPane fx:id="container" alignment="CENTER" prefHeight="640.0">
              <children>
                  <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true" />
              </children>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
          </StackPane>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0">
               <children>
                  <Button fx:id="nextImageButton" mnemonicParsing="false" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
